generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Url {
  id String @id @default(uuid())

  shortCode String    @unique
  longUrl   String
  expiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([shortCode])
  @@index([expiresAt])
}
